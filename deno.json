{
  "tasks": {
    "dev": "ENVIRONMENT=development deno run -A --allow-net --allow-read --allow-write --allow-env --watch=src/static/,src/routes/,src/islands/ src/dev.ts",
    "start": "ENVIRONMENT=production deno run -A --allow-read --watch --no-check src/main.ts"
  },
  "importMap": "./import_map.json",

  "lint": {
    "files": {
      "include": [
        "./"
      ]
    },
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "./"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
